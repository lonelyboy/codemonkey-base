<?xml version="1.0" encoding="UTF-8"?>
 
<assembly>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
  	
    <fileSet>
      <directory>${basedir}/web/WEB-INF/classes</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>ptconfig/**</include>
        <include>com/thunisoft/**</include>
      </includes>
      <excludes>
        <exclude>**/.svn/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/target/classes</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>ptconfig/**</include>
        <include>com/thunisoft/**</include>
      </includes>
      <excludes>
        <exclude>**/.svn/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>/</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
     	 
        <include>web/ptmodule/**</include>
      </includes>
      <excludes>
        <exclude>**/.svn/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>/</directory>
      <outputDirectory>META-INF/maven/${groupId}/${artifactId}</outputDirectory>
      <includes>
        <include>pom.xml</include>
        <include>version.xml</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>